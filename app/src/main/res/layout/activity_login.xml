<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="GREENUP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:textColor="#37A563"
        android:fontFamily="@font/suit_heavy"
        />



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/login_input"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/login_id"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="아이디를 입력해주세요"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/login_input"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="비밀번호를 입력해주세요"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pw_btn"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/login_checkbox"
        android:layout_marginTop="214dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="비밀번호 표시"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="217.5dp"
        android:layout_marginLeft="52dp"
        android:textColor="#8A8F8C"
        android:fontFamily="@font/suit_regular"
        />

    <RelativeLayout
        android:id="@+id/login_btn"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/login_btn"
        android:layout_marginTop="350dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="로그인"
            android:fontFamily="@font/suit_medium"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/signup_btn"
        android:layout_width="0dp"
        android:fontFamily="@font/suit_medium"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#37A463"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@id/login_btn"
        app:layout_constraintStart_toStartOf="@id/login_btn"
        />





</androidx.constraintlayout.widget.ConstraintLayout>