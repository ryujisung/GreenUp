<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="GREENUP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:textColor="#37A563"
        android:fontFamily="@font/suit_heavy"
        />
    <ImageView
        android:id="@+id/login_img_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="60dp"/>
    <EditText
        android:id="@+id/login_et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디를 입력해주세요"
        app:layout_constraintStart_toStartOf="@+id/login_img_frame"
        app:layout_constraintTop_toTopOf="@+id/login_img_frame"
        app:layout_constraintBottom_toBottomOf="@+id/login_img_frame"
        android:layout_marginStart="20dp"
        android:textSize="13dp"
        android:textColor="#606762"
        android:background="@null"
        />
    <ImageView
        android:id="@+id/login_img_frame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame"
        app:layout_constraintTop_toBottomOf="@+id/login_img_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/login_et_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력해주세요"
        app:layout_constraintStart_toStartOf="@+id/login_img_frame2"
        app:layout_constraintTop_toTopOf="@+id/login_img_frame2"
        app:layout_constraintBottom_toBottomOf="@+id/login_img_frame2"
        android:layout_marginStart="20dp"
        android:textSize="13dp"
        android:textColor="#606762"
        android:background="@null"
        />
    <RadioButton
        android:layout_marginTop="10dp"
        android:id="@+id/login_radio_shpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 표시"
        android:textSize="13dp"
        android:textColor="#606762"
        app:layout_constraintTop_toBottomOf="@id/login_img_frame2"
        app:layout_constraintStart_toStartOf="@id/login_img_frame2"/>
    <Button
        android:id="@+id/login_btn_loginbtn"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:text="로그인"
        android:background="@drawable/frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_radio_shpw"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#37A563"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btn_loginbtn"
        android:layout_marginTop="20dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>