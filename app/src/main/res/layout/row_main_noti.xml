<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_mainnoti_headLogo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="22dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txt_mainnoti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#5D6760"
            android:layout_marginStart="12dp"

            app:layout_constraintTop_toTopOf="@id/img_mainnoti_headLogo"
            app:layout_constraintStart_toEndOf="@id/img_mainnoti_headLogo"
            />
        <TextView
            android:id="@+id/txt_mainnoti_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#5D6760"
            android:layout_marginEnd="22dp"

            app:layout_constraintTop_toTopOf="@id/txt_mainnoti_title"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt_mainnoti_comtexttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#18231D"
            android:layout_marginStart="22dp"
            android:layout_marginTop="11dp"


            app:layout_constraintTop_toBottomOf="@id/txt_mainnoti_title"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>