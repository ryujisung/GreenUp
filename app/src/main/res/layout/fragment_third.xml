<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.viewpager.ThirdFragment">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그럼 한번 "
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환경"
            android:textColor="#37A563"
            android:textSize="24dp"

            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="을 지키러 가볼까요?"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/text1"
            app:layout_constraintTop_toTopOf="@id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="렛츠고~~!"
            app:layout_constraintTop_toBottomOf="@id/text0"
            app:layout_constraintStart_toStartOf="@id/text0"
            android:textColor="#5D6760"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_marginTop="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_t"
            app:layout_constraintTop_toBottomOf="@+id/text3"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/skip"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textSize="14dp"
            android:backgroundTint="#37A563"
            android:background="@drawable/button_round"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:text="시작하기"
            android:layout_marginBottom="30dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>