<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_mark_headLogo"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_gap"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txt_mark_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="농산물우수관리인증"
            android:textSize="16sp"
            android:fontFamily="@font/suit_semibold"
            android:layout_marginStart="12dp"

            app:layout_constraintTop_toTopOf="@id/img_mark_headLogo"
            app:layout_constraintStart_toEndOf="@id/img_mark_headLogo"
            />
        <TextView
            android:id="@+id/txtmark_comtexttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="106dp"
            android:layout_marginEnd="31dp"
            tools:text="농산물의 생산, 수확 후 관리 및 유통 각 단계에서 위해요소를 적절하게 관리한 농산물에 대해 인증 부여"
            android:textSize="15sp"
            android:textColor="#18231D"
            android:layout_marginTop="6dp"


            app:layout_constraintTop_toBottomOf="@id/txt_mark_title"
            app:layout_constraintStart_toStartOf="@id/txt_mark_title"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>